<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans.models">

    <class name="beans.models.UserAccount" table="USER_ACCOUNT">
        <id name="userId" column="ID" type="long">
            <generator class="foreign">
                <param name="property">USER</param>
            </generator>
        </id>
        <one-to-one name="User" class="beans.models.User"
                    constrained="true"></one-to-one>
        <property name="moneyAmount" type="double" column="MONEY_AMOUNT"/>
    </class>
</hibernate-mapping>